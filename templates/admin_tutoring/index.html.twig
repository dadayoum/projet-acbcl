{% include 'head.html.twig' %}
{% include 'loader.html.twig' %}
{% include 'sidebar.html.twig' %}

<!-- Custom Container -->
<div class="dt-container">

    <!-- Site Content Wrapper -->
    <div class="dt-content-wrapper">

        <!-- Site Content -->
        <div class="dt-content">

            <!-- Page Header -->
            <div class="dt-page__header">
                <h1 class="dt-page__title">Panel administrateur</h1>
            </div>
            <!-- /page header -->

            <!-- Grid -->
            <div class="row">

                <!-- Grid Item -->
                <div class="col-xl-12">

                    <!-- Entry Header -->
                    <div class="dt-entry__header">

                        <!-- Entry Heading -->
                        <div class="dt-entry__heading">
                            <h3 class="dt-entry__title">Accompagnement scolaire</h3>
                        </div>
                        <!-- /entry heading -->

                    </div>
                    <!-- /entry header -->

                    <a href="{{ path('app_admin_tutoring_new') }}">Créer une nouvelle demande</a>

                    <!-- Card -->
                    <div class="dt-card">

                        <!-- Card Body -->
                        <div class="dt-card__body">

                            <!-- Tables -->
                            <div class="table-responsive">

                                <table id="data-table" class="table table-striped table-bordered table-hover">
                                    <thead>
                                    <tr>
                                        <th>N° de la demande</th>
                                        <th>Email</th>
                                        <th>Nom</th>
                                        <th>Date de création</th>
                                        <th>Date de mise à jour</th>
                                        <th>Statut</th>
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for tutoring in tutorings %}
                                        <tr>
                                            <td>N° {{ tutoring.id }}</td>
                                            <td>{{ tutoring.userTutoring.email }}</td>
                                            <td>{{ tutoring.userTutoring.firstName }} {{ tutoring.userTutoring.lastName|upper}}</td>
                                            <td>{{ tutoring.createdAt | date("d/m/Y") }}</td>
                                            {% if tutoring.updatedAt %}
                                                <td>{{ tutoring.updatedAt | date("d/m/Y")}}</td>
                                            {% else %}
                                                <td>-</td>
                                            {% endif %}
                                            {% if 'IN_PROGRESS' in tutoring.status %}
                                                <td>En cours</td>
                                            {% else %}
                                                <td>Terminée</td>
                                            {% endif %}
                                            <td>
                                                <a href="{{ path('app_admin_tutoring_show', {'id': tutoring.id}) }}">Voir</a> |
                                                <a href="{{ path('app_admin_tutoring_edit', {'id': tutoring.id}) }}">Éditer</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <th>N° de la demande</th>
                                        <th>Email</th>
                                        <th>Nom</th>
                                        <th>Date de création</th>
                                        <th>Date de mise à jour</th>
                                        <th>Statut</th>
                                        <th>Action</th>
                                    </tr>
                                    </tfoot>
                                </table>

                            </div>
                            <!-- /tables -->

                        </div>
                        <!-- /card body -->

                    </div>
                    <!-- /card -->

                </div>
                <!-- /grid item -->

            </div>
            <!-- /grid -->

        </div>
        <!-- /site content -->

    </div>
    <!-- /site content wrapper -->

</div>
<!-- /custom Container -->

