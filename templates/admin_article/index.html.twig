{% include 'head.html.twig' %}
{% include 'loader.html.twig' %}
{% include 'sidebar.html.twig' %}

<!-- Custom Container -->
<div class="dt-container">

    <!-- Site Content Wrapper -->
    <div class="dt-content-wrapper">

        <!-- Site Content -->
        <div class="dt-content">

            <!-- Page Header -->
            <div class="dt-page__header">
                <h1 class="dt-page__title">Panel administrateur</h1>
            </div>
            <!-- /page header -->

            <!-- Grid -->
            <div class="row">

                <!-- Grid Item -->
                <div class="col-xl-12">

                    <!-- Entry Header -->
                    <div class="dt-entry__header">

                        <!-- Entry Heading -->
                        <div class="dt-entry__heading">
                            <h3 class="dt-entry__title">Articles</h3>
                        </div>
                        <!-- /entry heading -->

                    </div>
                    <!-- /entry header -->

                    <a href="{{ path('app_admin_article_new') }}">Créer un nouvel article</a>

                    <!-- Card -->
                    <div class="dt-card">

                        <!-- Card Body -->
                        <div class="dt-card__body">

                            <!-- Tables -->
                            <div class="table-responsive">

                                <table id="data-table" class="table table-striped table-bordered table-hover">
                                    <thead>
                                    <tr>
                                        <th>N°</th>
                                        <th>Créé le</th>
                                        <th>Mise à jour le</th>
                                        <th>Titre</th>
                                        <th>Type</th>
{#                                        <th>Contenu</th>#}
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        {% for article in articles %}
                                            <tr>
                                                <td>{{ article.id }}</td>
                                                <td>{{ article.createdAt ? article.createdAt|date("d/m/Y H:i:s") : '-' }}</td>
                                                <td>{{ article.updatedAt ? article.updatedAt|date("d/m/Y H:i:s") : '-' }}</td>
                                                <td>{{ article.title }}</td>
                                                <td>{{ article.articleType ? article.articleType.name : 'Non défini' }}</td>
{#                                                <td>{{ article.content|length > 50 ? article.content|slice(0, 50) ~ '...' : article.content }}</td>#}
                                                <td>
                                                    <a href="{{ path('app_admin_article_show', {'id': article.id}) }}">Voir | </a>
                                                    <a href="{{ path('app_admin_article_edit', {'id': article.id}) }}">Éditer</a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <th>N°</th>
                                        <th>Créé le</th>
                                        <th>Mise à jour le</th>
                                        <th>Titre</th>
                                        <th>Type</th>
{#                                        <th>Contenu</th>#}
                                        <th>Action</th>
                                    </tr>
                                    </tfoot>
                                </table>

                            </div>
                            <!-- /tables -->

                        </div>
                        <!-- /card body -->

                    </div>
                    <!-- /card -->

                </div>
                <!-- /grid item -->

            </div>
            <!-- /grid -->

        </div>
        <!-- /site content -->

    </div>
    <!-- /site content wrapper -->

</div>
<!-- /custom Container -->

